# Argo Energy Solutions - Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control - it contains sensitive information

# ─── Eniscope API (server-side only, NEVER prefix with VITE_) ───
ENISCOPE_API_URL=https://core.eniscope.com
ENISCOPE_API_KEY=your_api_key_here
ENISCOPE_EMAIL=your_email@example.com
ENISCOPE_PASSWORD=your_password_here

# ─── API Authentication ───
# Shared secret for Express & FastAPI endpoints (X-API-Key header)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_SECRET_KEY=change_me_to_a_random_string

# ─── Frontend (VITE_ vars are bundled into the client JS -- no secrets!) ───
VITE_API_TIMEOUT=30000

# ─── Neon PostgreSQL Database (Cloud) ───
DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require

# ─── SQLite Database (Local - for backwards compatibility) ───
SQLITE_DB_PATH=./backend/data/eniscope.db
